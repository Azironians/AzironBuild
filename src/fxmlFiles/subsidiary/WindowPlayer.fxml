<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane fx:id="root" prefWidth="700.0" stylesheets="@../../resources/css/azirona.css" visible="false"
            xmlns="http://javafx.com/javafx/9.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controllers.main.menu.ControllerPlayer">
    <children>
        <ImageView fitHeight="465.0" fitWidth="700.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@../../resources/Triggers/Pane.png"/>
            </image>
        </ImageView>
        <Button fx:id="buttonStart" layoutX="493.0" layoutY="321.0" mnemonicParsing="false"
                onMouseClicked="#buttonStartClicked" prefHeight="37.0" prefWidth="140.0" text="Старт" visible="true"/>
        <Button fx:id="buttonBack" layoutX="68.0" layoutY="321.0" mnemonicParsing="false"
                onMouseClicked="#buttonBackClicked" prefHeight="37.0" prefWidth="140.0" text="Назад"/>
        <AnchorPane fx:id="primaryPlayerPane" layoutX="68.0" layoutY="93.0" prefHeight="53.0" prefWidth="565.0">
            <children>
                <Button fx:id="primaryLeftPlayer" mnemonicParsing="false" prefHeight="67.0" prefWidth="211.0"
                        text="Добавить игрока" onMouseClicked="#addPrimaryLeftPlayer">
                    <font>
                        <Font size="21.0"/>
                    </font>
                </Button>
                <Button fx:id="primaryRightPlayer" layoutX="354.0" mnemonicParsing="false" prefHeight="67.0"
                        prefWidth="211.0" text="Добавить игрока" onMouseClicked="#addPrimaryRightPlayer">
                    <font>
                        <Font size="21.0"/>
                    </font>
                </Button>
            </children>
        </AnchorPane>
        <AnchorPane fx:id="secondaryPlayerPane" layoutX="68.0" layoutY="199.0" prefHeight="53.0" prefWidth="565.0"
                    visible="false">
            <children>
                <Button fx:id="secondaryLeftPlayer" mnemonicParsing="false" prefHeight="67.0" prefWidth="211.0"
                        text="Добавить игрока" onMouseClicked="#addSecondaryLeftPlayer">
                    <font>
                        <Font size="21.0"/>
                    </font>
                </Button>
                <Button fx:id="secondaryRightPlayer" layoutX="354.0" mnemonicParsing="false" prefHeight="67.0"
                        prefWidth="211.0" text="Добавить игрока" onMouseClicked="#addSecondaryRightPlayer">
                    <font>
                        <Font size="21.0"/>
                    </font>
                </Button>
            </children>
        </AnchorPane>
        <Text fx:id="gameMode" fill="WHITE" layoutX="321.0" layoutY="65.0" strokeType="OUTSIDE" strokeWidth="0.0"
              text="1x1">
            <font>
                <Font size="38.0"/>
            </font>
        </Text>
        <Text fx:id="leftTeam" fill="WHITE" layoutX="110.0" layoutY="62.0" strokeType="OUTSIDE" strokeWidth="0.0"
              text="Команда 1">
            <font>
                <Font size="27.0"/>
            </font>
        </Text>
        <Text fx:id="rightTeam" fill="WHITE" layoutX="463.0" layoutY="62.0" strokeType="OUTSIDE" strokeWidth="0.0"
              text="Команда 2">
            <font>
                <Font size="27.0"/>
            </font>
        </Text>
    </children>
</AnchorPane>
